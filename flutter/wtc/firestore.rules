rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /users/{id}{
        allow read, write: if true;
    }
    match /_posts/{id}{
        allow read, write: if true;
    }
    match /_review_posts/{id}{
        allow read, write: if true;
    }
    match /tags/{id}{
        allow read, write: if true;
    }
    match /_review_account/{id}{
        allow read, write: if true;
    }
  }
}